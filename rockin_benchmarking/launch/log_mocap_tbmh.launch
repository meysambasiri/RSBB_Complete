<launch>
	<group ns="tbmh">
	
		<rosparam file="$(find rockin_benchmarking)/config/log_mocap_tbmh.yaml" command="load" />

		<node pkg="tf"
			type="static_transform_publisher"
			name="world_map_bc"
			args="0 0 0 0 0 0 world map 100"
		/>
		
		<node name="map_server"
			pkg="map_server"
			type="map_server"
			args="$(find rockin_benchmarking)/config/map_tbmh.yaml"
		/>

		<node name="mocap_tbmh" 
			pkg="mocap_optitrack_mod2" 
			type="mocap_node_mod2"
			respawn="false"
			launch-prefix=""
			required="true"
		/>

		<node pkg="rosbag"
			type="record"
			name="log_mocap_tbmh"
			args="record -o /home/rockin/logs/log_mocap_tbmh
				--split --duration=1h
				/tbmh/map
				/tbmh/map_metadata
				/tbmh/robot/pose
				/tbmh/robot/pose2d
				/tf"
		/>

	</group>      
</launch>
