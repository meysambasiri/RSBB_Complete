<launch>
	<group ns="fbm2h">

		<node name="bmbox"
			pkg="rockin_benchmarking"
			type="fbm2h"
			output="screen"
			launch-prefix="gnome-terminal -e"
		/>

		<node name="refbox"
			pkg="rockin_benchmarking"
			type="fbm2h_refbox_test"
			output="screen"
			launch-prefix="gnome-terminal -e"
		/>
	
		<node name="client"
			pkg="rockin_benchmarking"
			type="fbm2h_client_test"
			output="screen"
			launch-prefix="gnome-terminal -e"
		/>

		<node pkg="rosbag"
			type="record"
			name="log_fbmh2"
			args="record -o /home/rockin/logs/log_fbm2h_test
				--split --duration=1h
				/fbm2h/bmbox_state
				/fbm2h/client_state
				/fbm2h/refbox_state
				/rosout"
		/>

	</group>    
</launch>
